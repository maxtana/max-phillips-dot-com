---
import { socials } from "../data/socials"
import { Icon } from 'astro-icon/components'
---



<footer>
    <hr>
    <div class="footer__content">

        <ul aria-label="social media links">
            {socials.map(({ name, url, icon }) => (
              <li>
                <a href={url} target="_blank" rel="noopener noreferrer" aria-label={`Follow me on ${name}`}>
                  <Icon name={icon} width="2em" height="2em" aria-hidden="true" /> 
                  {name}
                </a>
              </li>
            ))}
          </ul>

    </div>

</footer>

<style>

    footer {
        margin-block-end: 5rem;
    }
    
    ul{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        margin-top: 2rem;  
        list-style: none;
        padding: 0;
        border: 0;
    }

    li {
        padding: 0;
        margin: 0;
        a {
            display: flex;
            align-items: center;
            gap: .25em;

        }

    }
    
</style>